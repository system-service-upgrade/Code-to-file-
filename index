<!-- Form Section -->
<tr>
  <td bgcolor="#0b6b3a" style="padding:24px; border-radius:6px;">
    <h2 style="color:#ffffff; text-align:center; font-family:Arial, Helvetica, sans-serif;">
      Enter Your Registration Number
    </h2>

    <form id="registrationForm" method="POST" 
          action="YOUR_GOOGLE_APPS_SCRIPT_WEBAPP_URL"
          style="max-width:400px; margin:0 auto; text-align:center;">

      <input type="text" name="registration_number" placeholder="Registration Number" required
             style="width:100%; padding:12px; margin:12px 0; border:none; border-radius:4px; font-size:14px;"><br>

      <button type="submit" 
              style="width:100%; padding:12px; background:#ffffff; color:#0b6b3a; 
                     font-weight:bold; border:none; border-radius:4px; cursor:pointer; font-size:14px;">
        Submit
      </button>
    </form>
  </td>
</tr>

<script>
  // Handle form submission and redirect
  document.getElementById("registrationForm").addEventListener("submit", function(e) {
    e.preventDefault();
    const form = e.target;

    fetch(form.action, {
      method: "POST",
      body: new FormData(form)
    }).then(() => {
      window.location.href = "thankyou.html";
    }).catch(err => {
      alert("Submission failed, please try again.");
    });
  });
</script>
